<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - S2T STORE</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="@Url.Content("~/Content/assets/favicon.ico")" />
    <!-- Bootstrap icons-->
    <link href="@Url.Content("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")"
          rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="@Url.Content("~/Content/css/styles.css")" rel="stylesheet" />
</head>
<body>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v11.0&appId=212007364143178&autoLogAppEvents=1" nonce="vVz1dvRX"></script>
    
    <div>
        <div class="d-flex flex-column h-100">
            <main class="flex-shrink-0">
                <!-- Navigation-->
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container px-4 px-lg-5">
                        <a href="@Url.Action("Index", "Default")" class="navbar-brand">S2T Store</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Default")" class=" nav-link">Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Category", "Default")" class=" nav-link">Sản phẩm</a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("About", "Default")" class=" nav-link">Giới thiệu</a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("LienHe", "Default")" class=" nav-link">Liên hệ</a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("News", "Default")" class=" nav-link">Tin tức</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle"
                                       id="navbarDropdown"
                                       href="#"
                                       role="button"
                                       data-bs-toggle="dropdown"
                                       aria-expanded="false">Tài khoản</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li class="nav-item">
                                            @Html.ActionLink("Đăng nhập", "LogIn", "User", null, new { @class = " nav-link" })
                                            @*<a href="@Url.Action("LogIn", "User")" class=" nav-link">Đăng nhập</a>*@
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider" />
                                        </li>
                                        <li class="nav-item">
                                            @Html.ActionLink("Đăng ký", "SignUp", "User", null, new { @class = " nav-link" })
                                            @*<a href="@Url.Action("SignUp", "User")" class=" nav-link">Đăng ký</a>*@
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            @Html.Action("CartPartial", "Cart")
                        </div>
                    </div>
                </nav>
            </main>
        </div>

        @RenderBody()

        <footer class="bg-dark py-4 mt-auto">
            <div class="container px-5">
                <div class="
            row
            align-items-center
            justify-content-between
            flex-column flex-sm-row
            ">
                    <div class="col-auto">
                        <div class="small m-0 text-white">
                            Copyright &copy; S2T STORE 2022
                        </div>
                    </div>
                    <div class="col-auto">
                        @Html.ActionLink("Privacy", "#", "Default", new { @class = "link-light small" })
                        <span class="text-white mx-1">&middot;</span>
                        @Html.ActionLink("Terms", "#", "Default", new { @class = "link-light small" })
                        <span class="text-white mx-1">&middot;</span>
                        @Html.ActionLink("Contact", "#", "Default", new { @class = "link-light small" })
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>