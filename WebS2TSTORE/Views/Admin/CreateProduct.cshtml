@model WebS2TSTORE.Models.SanPham

@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CreateProduct</h2>

@using (Html.BeginForm("CreateProduct", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h4>Tên thương hiệu</h4>
            <div class="col-md-10">
                @Html.DropDownList("maTH")
            </div>
        </div>

        <div class="form-group">
            <h4>Tên sản phẩm</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Ảnh chính</h4>
            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <h4>Ảnh phụ 1</h4>
            <div class="col-md-10">
                <input type="file" name="fileUpload1" />
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <h4>Ảnh phụ 2</h4>
            <div class="col-md-10">
                <input type="file" name="fileUpload2" />
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <h4>Ảnh phụ 3</h4>
            <div class="col-md-10">
                <input type="file" name="fileUpload3" size="60" />
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <h4>Ảnh phụ 4</h4>
            <div class="col-md-10">
                <input type="file" name="fileUpload4" />
                @*thong bao trung*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <h4>Mô tả sản phẩm</h4>
            <form method="post">
                <div class="col-md-10">
                    <textarea name="Mota">Mô tả thông tin giày</textarea>
                </div>
            </form>
        </div>

        <div class="form-group">
            <h4>Giá bán</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.giaBan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.giaBan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Size</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.size, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.size, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>Số lượng</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.soLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.soLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h3>Tình trạng</h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tinhTrang, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm sản phẩm" class="btn btn-default" style="width:90px; margin-left: 100px; margin-top: 10px; background-color:lawngreen; color:black" />
            </div>
        </div>
    </div>
}

<div class="btn btn-warning" style="margin-left: 50px">
    @Html.ActionLink("Back to List", "Index")
</div>



<link href="~/Content/Admin/css/Input.css" rel="stylesheet" />

