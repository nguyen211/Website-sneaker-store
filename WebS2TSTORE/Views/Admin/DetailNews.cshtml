@model WebS2TSTORE.Models.TinTuc

@{
    ViewBag.Title = "DetailNews";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết tin</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tieuDe)
        </dd>

        <dt>
            Nội dung tin
        </dt>

        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.noiDung)
        </dd>

        <dt>
            Ảnh tin
        </dt>

        <dd>
            <img src="@Url.Content("~/Content/images/"+  Model.image)" width="120px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Delete", "DelNews", new { id = Model.maTT }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<style>
    dl{
        margin-left: 100px;
    }
    p{
        text-align:center;
        font-size: 30px;
    }
    h2 {
        text-align: center;
    }
</style>
