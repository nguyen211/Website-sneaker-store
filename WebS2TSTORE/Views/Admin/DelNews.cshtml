@model WebS2TSTORE.Models.TinTuc

@{
    ViewBag.Title = "DelNews";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa tin tức</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tieuDe)
        </dd>

        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.noiDung)
        </dd>

        <dt>
            Ảnh tin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.image)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "News")
        </div>
    }
</div>

<link href="~/Content/Admin/css/Input.css" rel="stylesheet" />

<style>
    .col-md-10 {
        border: none;
        border-bottom: 2px;
        max-width: 75%;
    }

    .form-horizontal {
        margin-left: 30px;
    }
    dl {
        margin-left: 100px;
    }

    p {
        text-align: center;
        font-size: 30px;
    }

    h2 {
        text-align: center;
    }
</style>