<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Sản phẩm tương tự</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (var more in Model)
            {
                <tr>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <a href="@Url.Action("Details","Default", new {id = more.maSP })">
                                <img class="card-img-top" src="~/Content/images/@more.image" alt="..." />
                                </a>
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@more.tenSP</h5>
                                        <!-- Product price-->
                                        @more.giaBan
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" @Url.Action("Details", "Default", new { id = more.maSP })>Xem tùy chọn</a></div>
                                </div>
                        </div>
                    </div>
                </tr>
            }
        </div>
    </div>
</section>
